@model ResultModel

<html>
    <head>
        <link rel="stylesheet" href="~/css/UserForm.css" />
    </head>
    <body>
        <p class="space">
                <h1 style="text-align: center">Register</h1>
        </p>
        <form asp-action="RegisterUser" asp-controller="User" method="post" class="center-text">
            @{if (@Model != null && @Model.GetType() == typeof(ErrorResultModel))
                {
                    <div class="alert alert-danger formInput" role="alert">
                        @(((ErrorResultModel)Model).Message)
                </div>
            }
        }
        <div class="form-group small-space">
                <label for="Email" class="form-text">E-mail Address: </label>
                <input type="text" name="Email" id="Email" class="form-control formInput" placeholder="E-mail Address" value=@ViewData["email"] required/>
            </div>
            <div class="form-group small-space">
                <label for="UserName" class="form-text">Username: </label>
                <input type="text" name="UserName" id="UserName" class="form-control formInput" placeholder="Username" value=@ViewData["Username"] required/>
            </div>
            <div class="form-group small-space">
                <label for="Password" class="form-text">Password: </label>
                <input type="password" name="Password" id="Password" class="form-control formInput" placeholder="Password" value=@ViewData["Password"] required/>
            </div>
            <div class="form-group small-space">
                <label for="ConfirmPassword" class="form-text">Confirm Password: </label>
                <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control formInput" placeholder="Confirm Password" required/>
            </div>
            <input type="submit" class="btn btn-primary small-space" value="Register"/>
        </form>
    </body>
</html>