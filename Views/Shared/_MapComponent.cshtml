@model List<RecordModel>

<html>
    <head>
        <script src='https://api.mapbox.com/mapbox-gl-js/v2.6.1/mapbox-gl.js'></script>
        <link href='https://api.mapbox.com/mapbox-gl-js/v2.6.1/mapbox-gl.css' rel='stylesheet' />
    <style>
        #LocationTable {
            text-align: center;
            position: relative;
            border-collapse: collapse;
            top: 15%;
            right: 10%;
            min-height: fit-content;
            max-height: fit-content;
            min-width: fit-content;
            display:inline-block
        }
        #recentLocations {
            display:inline-block; float: right;
        }
        table, th, td{
            border: 1px solid black;
        }
    </style>
    </head>
    <body>

        
        <div id="recentLocations">
            <table id="LocationTable">
                <colgroup>
                    <col span="1" style="width:15%"/>
                    <col span="1" style="width:25%"/>
                    <col span="1" style="width:25%"/>
                    <col span="1" style="width:30%"/>
                </colgroup>
                <thead>
                    <tr>
                        <td colspan="4">This table holds the recent locations your device has been(up to 20).</td>
                    </tr>
                    <tr>
                        <th></th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Pinged At</th>
                    </tr>
                </thead>
                <tbody>
                @for(int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model[i].DeviceLatitude</td>
                        <td>@Model[i].DeviceLongitude</td>
                        <td>@(Model[i].CreatedAt.ToLocalTime().ToString())</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <script>
            
        </script>
    </body>
    
</html>


